{
  "compilerOptions": {
    "target": "es6",
    "allowSyntheticDefaultImports": false,
    "baseUrl": "./src",
    "module": "commonjs",
    "paths": {
      "components/*": [
        "./components/*"
      ],
      "emails/*": [
        "./pages/emails/*"
      ],
      "styles/*": [
        "./styles/*"
      ],
    }
  },
  "include": [
    "./src"
  ],
  "exclude": [
    "node_modules",
    "build",
    ".git",
    ".github",
    "docs",
    "scripts",
    "server",
    "static",
    "public"
  ]
}